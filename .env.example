# Server Configuration
# Copy this file to .env and configure your settings

# The IP address or hostname to bind the server to
# Use 'localhost' for local development
# Use '0.0.0.0' to listen on all network interfaces
VITE_HOST=localhost

# The port number for the development server
VITE_PORT=5173

# API Configuration
# The base URL for your backend API server
# Example: http://localhost:8000/api/v1
VITE_API_BASE_URL=http://appserver1:8000/api/v1

# Home URL for public pages (e.g., booking pages)
VITE_HOME_URL=https://www.zenible.com

# Session Configuration
# Idle timeout in milliseconds (default: 3600000 = 60 minutes)
VITE_IDLE_TIMEOUT_MS=3600000
# Auth session poll interval in milliseconds (default: 60000 = 60 seconds)
VITE_AUTH_POLL_INTERVAL_MS=60000